// Color variables

main_bg = white
header_bg = main_bg
footer_bg = #313133

main_text = #222
header_text = main_text
footer_text = #ccc

footer_border = #A8F26A

selection_color = footer_border


// Styling

html,
button,
input,
select,
textarea
  color: main_text

body
  background: main_bg
  font: 1.2em/1.4 Merriweather, serif

::-moz-selection
  background: selection_color
  text-shadow: none

::selection
  background: selection_color
  text-shadow: none

hr
  border: 0
  border-top: 1px solid selection_color
  display: block
  height: 1px
  margin: 1em 0
  padding: 0

img
  vertical-align: middle

fieldset
  border: 0
  margin: 0
  padding: 0

textarea
  resize: vertical

.chromeframe
  background: #ccc
  color: #000
  margin: 0.2em 0
  padding: 0.2em 0

.wrapper
  margin: 0 5%
  width: 90%

.header-container
  background: header_bg
  font-family: Vollkorn, serif
  font-weight: normal

  .wrapper
    margin-top: 1em

  h1
    margin: 0

  a
    color: inherit
    text-decoration: none
    padding: 12px 0

    &:hover
      color: footer_border

.main-container
  .wrapper
    border-top: solid 1px #eee

  h1
    font-size: 1.4em
    line-height: 1.86em

  a:hover
    color: footer_border

.footer-container,
.main aside
  background: footer_bg
  border-top: 5px solid footer_border
  font-family: Lato, sans-serif
  font-size: 0.7em
  font-weight: bold
  line-height: 2em
  a
    color: inherit
    text-decoration: none

    &:hover
      color: footer_border

.title
  color: header_text
  margin-bottom: 0

// Menu

nav
  ul
    margin: 0
    padding: 0

  li
    margin-top 0.32em

  a
    float: left
    margin: 0 1.7%
    padding: 15px 0
    text-align: left

// Main

.main
  line-height: 1.6em
  padding: 30px 0

  aside
    color: header_text
    padding: 0px 5% 10px

ul
  list-style: none
  padding-left: 0

li
  margin-bottom: 10px

  &:last-child
    margin-bottom: 0

li a
  color: main_text
  text-decoration: none

time
  color: footer_text
  float: left
  font-size: 0.8em
  margin-right: 1em
  width: 6.5em

#posts div
  margin-left: 6.5em

// Footer

.footer-container footer
  color: footer_text
  padding: 20px 0

// IE Fixes

nav ul li
  display: inline

.oldie nav a
  margin: 0 0.7%

.ie7 .title
  padding-top: 20px


@media only screen and (min-width: 500px)

  // Menu

  .title,
  ul li
    float: left

  nav
    float: right

    li
      margin-left: 2em
    a
      margin: 0

@media only screen and (min-width: 750px)

  // Main

  .wrapper
    margin: 0 auto
    width: 700px


// Helper classes

.ir
  background-color: transparent
  border: 0
  overflow: hidden
  *text-indent: -9999px

.ir:before
  content: ""
  display: block
  width: 0
  height: 150%

.hidden
  display: none !important
  visibility: hidden

.visuallyhidden
  border: 0
  clip: rect(0 0 0 0)
  height: 1px
  margin: -1px
  overflow: hidden
  padding: 0
  position: absolute
  width: 1px

.visuallyhidden.focusable:active,
.visuallyhidden.focusable:focus
  clip: auto
  height: auto
  margin: 0
  overflow: visible
  position: static
  width: auto

.invisible
  visibility: hidden

.clearfix:before,
.clearfix:after
  content: " "
  display: table

.clearfix:after
  clear: both

.clearfix
  *zoom: 1


// Print styles

@media print
  *
    background: transparent !important
    color: #000 !important  // Black prints faster: h5bp.com/s
    box-shadow: none !important
    text-shadow: none !important

  a,
  a:visited
    text-decoration: underline

  a[href]:after
    content: " (" attr(href) ")"

  abbr[title]:after
    content: " (" attr(title) ")"

  // Don't show links for images, or javascript/internal links

  .ir a:after,
  a[href^="javascript:"]:after,
  a[href^="#"]:after
    content: ""

  pre,
  blockquote
    border: 1px solid #999
    page-break-inside: avoid

  thead
    display: table-header-group  // h5bp.com/t

  tr,
  img
    page-break-inside: avoid

  img
    max-width: 100% !important

  @page
    margin: 0.5cm

  p,
  h2,
  h3
    orphans: 3
    widows: 3

  h2,
  h3
    page-break-after: avoid
